#:kivy 1.0.9

<CubeButton>:
    button: button
    size_hint: 1, None
    height: button.height + dp(30)
    Button:
        id: button
        size_hint: 0.85, None
        font_size: '50sp'
        height: '80sp'

<MethodButton>:
    button: button
    size_hint: 1, None
    height: button.height + dp(30)
    Button:
        id: button
        size_hint: 0.85, None
        font_size: '50sp'
        height: '80sp'

<CubeStateDisplay>:
    font_size: '20dp'
    height: '100dp'
    text_size: self.size
    valign: 'top'
    halign: 'center'


<BasicStatsDisplay@BoxLayout>:
    orientation: 'horizontal'
    height: ao5_b.height
    BoxLayout:
        id: ao5_b
        orientation: 'vertical'
        size_hint: 1, None
        height: ao5_l1.height + ao5_l2.height
        Label:
            id: ao5_l1
            text: "Ao5"
            bold: True
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)
        Label:
            id: ao5_l2
            text: "---" if app.timehistory.ao5 is None else str(app.timehistory.ao5)
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Ao12"
            bold: True
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)
        Label:
            text: "---" if app.timehistory.ao12 is None else str(app.timehistory.ao12)
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Ao100"
            bold: True
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)
        Label:
            text: "---" if app.timehistory.ao100 is None else str(app.timehistory.ao100)
            font_size: '35sp'
            size_hint: 1, None
            height: self.texture_size[1] + dp(5)

<RecentTimes@FloatLayout>:
    height: scroll.height
    ScrollViewLR:
        id: scroll
        size_hint: 0.92, 1
        pos_hint: {'x': 0.04, 'y': 0}
        height: label.height
        do_scroll_y: False
        #:import ScrollEffect kivy.effects.scroll.ScrollEffect
        effect_cls: ScrollEffect
        Label:
            id: label
            size_hint_x: None
            text: app.timehistory.recent_solves_text
            font_size: '20dp'
            size: self.texture_size[0], self.texture_size[1] + dp(10)
            halign: 'left'

<LastTime>:
    orientation: 'horizontal'
    height: max(timelabel.height, deletebutton.height)
    lt: app.timehistory.last_time
    Widget:
        size_hint: 0.1, None
    Label:
        size_hint: None, 1
        text: "Last time: "
        font_size: '20sp'
        size: self.texture_size[0], self.texture_size[1] + sp(10)
    Label:
        id: timelabel
        size_hint: None, 1
        text: "N/A" if root.lt is None else str(root.lt)
        font_size: '30dp'
        width: max(self.texture_size[0] + sp(20), sp(120))
        height: self.texture_size[1] + sp(10)
    HideableButton:
        hidden: root.lt is None
        size_hint: None, 1
        background_color: [1, 1, 1, 1] if root.lt is None or not root.lt.is_p2() else [1.8, 0, 0, 1]
        text: "+2"
        font_size: '20sp'
        on_release: app.timehistory.mark_last_time('+2')
        width: dnfbutton.width
        height: self.texture_size[1] + sp(10)
    HideableButton:
        id: dnfbutton
        hidden: root.lt is None
        size_hint: None, 1
        background_color: [1, 1, 1, 1] if root.lt is None or not root.lt.is_dnf() else [1.8, 0, 0, 1]
        text: "DNF"
        font_size: '20sp'
        on_release: app.timehistory.mark_last_time('DNF')
        width: self.texture_size[0] + sp(20)
        height: self.texture_size[1] + sp(10)
    HideableButton:
        id: deletebutton
        hidden: root.lt is None
        size_hint: None, 1
        text: "X"
        font_size: '20sp'
        width: dnfbutton.width
        height: self.texture_size[1] + sp(10)
        # TODO: Confirmation popup
        on_release: app.timehistory.delete_last_time(popup=True)
    Widget:
        size_hint: 0.1, None


<DeleteTimePopup@Popup>:
    title: "Delete last time?"
    title_size: '20sp'
    title_align: 'center'
    auto_dismiss: True
    size_hint: None, None
    size: app.root_window.width - dp(40), '250dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 1
            text: 'Please confirm to delete the most recent time.'
            font_size: '20sp'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            height: self.texture_size[1] + dp(20)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: sp(35) + dp(20)
            Button:
                text: 'Cancel'
                size_hint: 0.5, 1
                font_size: '25sp'
                on_release: root.dismiss()
            Button:
                text: 'OK'
                size_hint: 0.5, 1
                font_size: '25sp'
                on_release: app.timehistory.delete_last_time(popup=False); root.dismiss()

<ResetCubePopup@Popup>:
    title: "Reset cube to solved state?"
    title_size: '20sp'
    title_align: 'center'
    auto_dismiss: True
    size_hint: None, None
    size: app.root_window.width - dp(40), '250dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 1
            text: 'Use this option when your cube has desynchronized. Make sure the cube is solved before reset.'
            font_size: '20sp'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            height: self.texture_size[1] + dp(20)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: sp(35) + dp(20)
            Button:
                text: 'Cancel'
                size_hint: 0.5, 1
                font_size: '25sp'
                on_release: root.dismiss()
            Button:
                text: 'OK, reset cube'
                size_hint: 0.5, 1
                font_size: '25sp'
                on_release: app.reset_cube(popup=False); root.dismiss()


<SolutionPopup@Popup>:
    title: "Solution:"
    title_size: '20sp'
    title_align: 'center'
    auto_dismiss: True
    size_hint: None, None
    size: app.root_window.width - dp(40), '250dp'
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint: 1, 0.2
            text: "U - white, F - green"
            font_size: '20sp'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            height: self.texture_size[1] + dp(20)
        Label:
            id: solution_label
            size_hint: 1, 0.8
            text: ""
            font_size: '20sp'
            text_size: self.size
            halign: 'center'
            valign: 'middle'
            height: self.texture_size[1] + dp(20)
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: sp(35) + dp(20)
            Button:
                text: 'Dismiss'
                size_hint: 0.5, 1
                font_size: '25sp'
                on_release: root.dismiss()

<AnalysisDisplay>:
    text_size: self.size
    valign: 'top'
    halign: 'left'
    markup: True
    font_size: '15dp'

<BluetoothCubeRoot>:
    cubelist: cubelist
    methodlist: methodlist
    connecting_label: connecting_label
    connecting_progressbar: connecting_progressbar
    connecting_cancelbutton: connecting_cancelbutton
    disconnectbutton: disconnectbutton
    scramble: scramble 

    Screen:
        name: "cube-selection"
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, None
                text: "Select a cube:"
                font_size: '40sp'
                height: '42sp'
            BoxLayout:
                orientation: 'vertical'
                id: cubelist
                size_hint: 1, 1

                Label:
                    size_hint: 1, 1
                    text: "Scanning for cubes..."
                    font_size: '20sp'
                    height: '20sp'

            HideableLabel:
                size_hint: 1, None
                text_size: self.width, None
                text: "Make sure bluetooth is enabled and that your cube is charged and activated."
                halign: 'center'
                valign: 'bottom'
                font_size: '20sp'
                height: self.texture_size[1] + dp(20)
            Button:
                text: "Continue without a cube"
                size_hint: 1, None
                font_size: '20sp'
                height: self.texture_size[1] + dp(20)
                on_release: app.continue_without_cube()


    Screen:
        name: "connecting"
        id: connecting

        AnchorLayout:
            BoxLayout:
                size_hint: 0.8, None
                padding: '20sp'
                orientation: 'vertical'
                Label:
                    id: connecting_label
                    size_hint: 1, None
                    text: ""
                    font_size: '20sp'
                    size: self.texture_size
                ProgressBar:
                    size_hint: 1, None
                    id: connecting_progressbar
                    max: 100
                    height: '50sp'
                AnchorLayout:
                    size_hint: 1, None
                    connecting_cancelbutton: connecting_cancelbutton
                    height: connecting_cancelbutton.height
                    anchor_y: 'bottom'
                    HideableButton:
                        id: connecting_cancelbutton
                        size_hint: None, None
                        text: "Cancel"
                        font_size: '20sp'
                        size: self.texture_size[0] + dp(30), self.texture_size[1] + dp(30)
                        on_release: app.disconnect_cube()


    Screen:
        name: "timer"
        BoxLayout:
            orientation: 'vertical'
            bcolor: 0, 0, 1, 0

            canvas.before:
                Color:
                    rgba: self.bcolor
                Rectangle:
                    pos: self.x - self.parent.x, self.y - self.parent.y
                    size: self.size

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: '40dp'
                HideableButton:
                    id: disconnectbutton
                    size_hint: 0.25, 1
                    text: "Disconnect"
                    on_release: app.disconnect_cube()
                Button:
                    size_hint: 0.25, 1
                    text: "Reset"
                    on_release: app.reset_cube()
                Button:
                    size_hint: 0.25, 1
                    text: "Solve"
                    on_release: app.solve()
                Button:
                    size_hint: 0.25, 1
                    text: "Method"
                    on_release: app.select_method()

            # BoxLayout:
            #     orientation: 'horizontal'
            #     size_hint: 1, None
            #     height: '40dp'
            #     Button:
            #         size_hint: 0.33, 1
            #         text: "Export history"
            #         on_release: app.export_history()
            #     Button:
            #         size_hint: 0.33, 1
            #         text: "Import history"
            #         on_release: app.import_history()
            #     # Button:
            #     #     size_hint: 0.33, 1
            #     #     text: "Solve"
            #     #     on_release: app.solve()

            BoxLayout:
                size_hint: 1, None
                orientation: 'horizontal'
                height: cubedisplay.height
                CubeDisplay:
                    id: cubedisplay
                    size_hint: 0.5, None
                    height: '150dp'
                AnalysisDisplay:
                    size_hint: 0.5, 1

            Button:
                height: self.texture_size[1]
                text_size:  0.9*self.width, None
                id: scramble
                halign: 'center'
                size_hint: 1, None 
                text: "generating..."
                font_size: '30sp'
                on_release: app.get_new_scramble() 

            TimeDisplay:
                time_text_ratio: 0.38
                size_hint: 1, 1
                font_size: min(self.width * self.time_text_ratio, self.height * 0.7)
                text: "0.0"

            BasicStatsDisplay:
                size_hint: 1, None

            LastTime:
                size_hint: 1, None

            RecentTimes:
                size_hint: 1, None

            PrimeButton:
                size_hint: 1, None
                id: primebutton
                text: "Prime" if not app.timer.primed else "Disarm"
                font_size: dp(40)
                height: self.font_size + dp(15)

            TimerButton:
                size_hint: 1, None
                id: timerbutton
                text: "Start" if not app.timer.running else "Stop"
                font_size: dp(40)
                height: self.font_size + dp(15)

    Screen:
        name: "method-selection"
        BoxLayout:
            orientation: 'vertical'
            Label:
                size_hint: 1, None
                text: "Select a method:"
                font_size: '40sp'
                height: '42sp'
            BoxLayout:
                orientation: 'vertical'
                id: methodlist
                size_hint: 1, 1
